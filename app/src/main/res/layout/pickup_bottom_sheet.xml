<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp">

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <TextView
            android:textColor="#000"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:textStyle="bold"
            android:text="Estimate Fare"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5"
            android:padding="5dp"
            >
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".7"
            android:layout_gravity="center"
            android:src="@drawable/source_pin"/>

            <View
                android:layout_width="2dp"
                android:layout_height="40dp"
                android:background="#000"/>

            <TextView
            android:id="@+id/txt_sheet_location"
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
                android:textSize="18sp"
            android:text="Source"/>
        </LinearLayout>


        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".7"
                android:layout_gravity="center"
                android:src="@drawable/destination_pin"/>
            <View
                android:layout_width="2dp"
                android:layout_height="40dp"
                android:background="#000"/>
        <TextView
            android:id="@+id/txt_sheet_destination"
            android:padding="10dp"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Destiantion"
            android:textSize="18sp"/>


        </LinearLayout>

        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".7"
                android:layout_gravity="center"
                android:src="@drawable/distance"/>

            <View
                android:layout_width="2dp"
                android:layout_height="40dp"
                android:background="#000"/>

            <TextView
                android:layout_weight="4"
                android:id="@+id/txt_distance"
                android:padding="10dp"
                android:layout_width="0dp"
                android:textSize="18sp"
                android:layout_height="wrap_content"
                android:text="Fare"/>



        </LinearLayout>

        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".7"
                android:layout_gravity="center"
                android:src="@drawable/money"/>

            <View
                android:layout_width="2dp"
                android:layout_height="40dp"
                android:background="#000"/>

        <TextView
            android:layout_weight="4"
            android:id="@+id/calculate_fare"
            android:padding="10dp"
            android:layout_width="0dp"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:text="Fare"/>



        </LinearLayout>




    </LinearLayout>

</androidx.cardview.widget.CardView>