<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.CallDriverActivity"

    >

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/cancel_call"
        android:elevation="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/cancelBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_close_black_24dp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:fontFamily="@font/verno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Driver Details"
            android:textColor="#000"
            android:textSize="38sp" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:weightSum="5">
        <TextView
            android:fontFamily="@font/verno"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:text="Driver Name"
            android:textSize="22sp" />

            <TextView
                android:layout_weight="3"
                android:fontFamily="@font/verno"
                android:id="@+id/driver_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:text="Driver Name"
                android:textSize="22sp" />

        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:weightSum="5">


        <TextView
            android:fontFamily="@font/verno"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"

            android:text="Phone"
            android:textSize="22sp" />
        <TextView
            android:id="@+id/driver_phone"
            android:fontFamily="@font/verno"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:textSize="22sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:weightSum="5">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"

            android:text="Rating"
            android:textSize="22sp"
            android:fontFamily="@font/verno"/>


        <TextView
            android:id="@+id/driver_rating"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"

            android:text="Rating"
            android:textSize="22sp"
            android:fontFamily="@font/verno"/>

    </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/call_driver"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#393e46"
            android:textSize="20sp"
            android:textColor="#fff"
            android:text="Call Driver"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/call_driver_dialup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#393e46"
            android:textSize="20sp"
            android:textColor="#fff"
            android:text="DialUp"
            android:textAllCaps="false" />


    </LinearLayout>


</RelativeLayout>